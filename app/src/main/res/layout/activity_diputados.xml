                android:id="@+id/TVnombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:layout_margin="50dp"
                android:layout_marginTop="-30dp"
                android:layout_gravity="center"/>
